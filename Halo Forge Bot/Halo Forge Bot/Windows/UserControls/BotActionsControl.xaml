<UserControl x:Class="Halo_Forge_Bot.Windows.UserControls.BotActionsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Halo_Forge_Bot.Windows.UserControls"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="500">


    <Grid Background="{StaticResource Base2}">
        <TabControl TabStripPlacement="Top" HorizontalContentAlignment="Center"  Margin="0" Background="Transparent" BorderBrush="Transparent">
            <TabItem  Header="Extra" Margin="0,0,0,0" Foreground="White" FontSize="16" HorizontalAlignment="Center" Width="100"></TabItem>
            <TabItem  Header="Advanced" Foreground="White" HorizontalAlignment="Center" Width="100">
                
                <local:AdvancedBotMenuControl Margin="0,10,0,0"></local:AdvancedBotMenuControl>
                
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>