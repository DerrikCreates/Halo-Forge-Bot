<UserControl x:Class="Halo_Forge_Bot.Windows.UserControls.ListViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Halo_Forge_Bot.Windows.UserControls"
             x:Name="Root"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="250">

    <DockPanel Background="Transparent" HorizontalAlignment="Left">
        <Label Name="TitleLabel" Content="{Binding Title, ElementName=Root }" DockPanel.Dock="Top" HorizontalAlignment="Left" FontSize="20"
               Foreground="{StaticResource BrandAccentColor}">
            
        </Label>
        <ScrollViewer DockPanel.Dock="Bottom" VerticalAlignment="Top" HorizontalAlignment="Left" Grid.Column="1" CanContentScroll="True"
                      VerticalScrollBarVisibility="Auto"
                      Background="Transparent">
            <StackPanel MinWidth="200"  Name="ListStackPanel" Background="Transparent">

            </StackPanel>
        </ScrollViewer>

    </DockPanel>

</UserControl>